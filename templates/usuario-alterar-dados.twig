{% extends "baseNav.twig" %} {% block title %} Alterar dados do usuário {% endblock title %} {% block content %}

<h1>Alterar dados do usuário</h1>
<form method="POST" action="{{ path_for('usuario-alterar-dados', { 'id': dados.usuario.id_externo }) }}">
  <div class="form-group">
    <label for="nome">Nome: </label>
    <input type="text" class="form-control" name="nome" id="nome" value="{{ dados.inputForm.nome ?? dados.usuario.nome }}" required>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" name="email" id="email" value="{{ dados.inputForm.email ?? dados.usuario.email }}" required>
  </div>
  <div class="form-group">
    <label for="senha">Confirme sua senha:</label>
    <input type="password" class="form-control" name="senha" id="senha" placeholder="Digite sua senha" required>
    <small id="senhaHelp" class="form-text text-muted">Digite a senha da sua conta para confirmar a alteração dos dados.</small>
  </div>
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>

{% endblock content %}