{% extends "base.twig" %} {% block title %} Login {% endblock title %} {% block content %} 
{% block link %}
<link href="./css/login.css" rel="stylesheet">
{% endblock link %}
<div class="container">
  <div class="row">
    <div class="col-12">
      <form class="form-signin" action="login/entrar" method="POST">
        {{ include('mensagens.twig') }}
        <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Entre</h1>
        <label for="email" class="sr-only">Email address</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required autofocus>
        <label for="senha" class="sr-only">Password</label>
        <input type="password" id="senha" name="senha" class="form-control" placeholder="Password" required>
        {{ include('includes/csrf.twig') }}
        <button class="btn btn-lg btn-primary btn-block" type="submit">Entre</button>
        <a name="" id="" class="btn btn-secondary btn-block btn-lg" href="login/cadastro" role="button">Cadastre-se</a>
        <a href="login/esqueceu_senha" class="">Esqueceu a senha?</a>
      </form>
    </div>
  </div>
</div>
{% endblock content %}